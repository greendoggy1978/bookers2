<h2>タイトル</h2>
<p><%= @book.title %></p>

<h2>本文</h2>
<p><%= @book.body %></p>

<h2>画像</h2>
<% if @book.image.attached? %>
  <%= image_tag @book.image, size: "300x300" %>
<% end %>

<%= link_to "編集", edit_book_path(@book.id) %>

<div>
  <%= image_tag @book_image.get_image %>
  <p>ショップ名：<%= @book_image.shop_name %></p>
  <p>説明：<%= @book_image.caption %></p>
  <p>投稿ユーザー画像：<%= image_tag @book_image.user.get_profile_image(100,100) %></p>  <p>ユーザーネーム：<%= @book_image.user.name %></p>
  <p>投稿日時：<%= @book_image.created_at.strftime('%Y/%m/%d') %></p>
  <% if @book_image.user == current_user %>
    <%= link_to "削除", book_image_path(@book_image), method: :delete %>
  <% end %>
</div>