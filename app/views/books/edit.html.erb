<div class="container">
	<div class="row justify-content-center">
		<div class="col-5">
  		<h1>Editing Book</h1>
  		<% if @book.errors.any? %>
        <span class="error-message">error prohibited this obj from being</span>
        <br>
        <span>saved:</span>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
      <div>
  		<%= form_for (@book) do |f| %>
  			<div class="form-group row">
  				<label class="col-12" for="book_title">Title</label>
  				<%= f.text_field :title, class: "col-12" %>
  			</div>
  			<div class="form-group row">
  				<label for="book_body">Opinion</label>
  				<%= f.text_area :body, class: "col-12" %>
  			</div>
  			<div class="form-group row">
  				<%= f.submit 'Update Book', class:"btn btn-success col-3" %>
  			</div>
  		<% end %>
  		<%= link_to 'Show', book_path(@book) %> | <%= link_to 'Back', books_path %>
  		</div>
		</div>
	</div>
</div>