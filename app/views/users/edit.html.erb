<div class="container">
	<div class="row justify-content-center">
		<div class="col-5">
  		<h1>User info</h1>
  		<% if @user.errors.any? %>
        <span class="error-message">error prohibited this obj from being</span>
        <br>
        <span>saved:</span>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
      <div>
  		<%= form_for (@user) do |f| %>
  			<div class="form-group row">
  				<label class="col-12" for="user_name">Name</label>
  				<%= f.text_field :name, class: "col-12" %>
  			</div>
  			<div class="form-group row">
  				<label class="col-12" for="user_image">Image</label>
  				<%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  			</div>
  			<div class="form-group row">
  				<label for="user_introduction">Introduction</label>
  				<%= f.text_area :introduction, class: "col-12" %>
  			</div>
  			<div class="form-group row">
  				<%= f.submit 'Update User', class:"btn btn-secondary col-3" %>
  			</div>
  		<% end %>
  		</div>
		</div>
	</div>
</div>