<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
<table class="table">
	<tbody>
		<tr>
			<th>name</th>
			<td><%= user.name %></td>
		</tr>
		<tr>
			<th>introduction</th>
			<td><%= user.introduction %></td>
		</tr>
	</tbody>
</table>
<%= link_to edit_user_path(user) do %>
	<div class="btn btn-outline-secondary w-100">
		<i class="fas fa-user-cog"></i>
	</div>
<% end %>